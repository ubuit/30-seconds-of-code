---
import settings from '#src/astro/settings.js';

import Icon from '#src/astro/components/Icon.astro';

const iconSize = '1.25rem';
---

<header aria-label="Main">
  <h1>
    <a title={settings.websiteName} aria-label={settings.websiteName} href="/">
      <img
        fetchpriority="high"
        src="/assets/30s-logo.png"
        alt="Home"
        width="140"
        height="48"
      />
    </a>
  </h1>
  <nav data-nav-action-container>
    <a href="/" data-nav-action="home">
      <Icon name="home" size={iconSize} title="Home" aria-label="Home" />
    </a>
    <a href="/collections/p/1" data-nav-action="collections">
      <Icon
        name="list"
        size={iconSize}
        title="Collections"
        aria-label="Collections"
      />
    </a>
    <button data-open-modal="omnisearch" data-nav-action="search">
      <Icon name="search" size={iconSize} title="Search" aria-label="Search" />
    </button>
    <a href={settings.githubRepoUrl} target="_blank" rel="noopener noreferrer">
      <Icon name="github" size={iconSize} title="GitHub" aria-label="GitHub" />
    </a>
  </nav>
</header>

<script src="../scripts/hotkeys.js"></script>
